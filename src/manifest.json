{
  "manifest_version": 2,
  "name": "Overleaf Commander",
  "description": "Omnibar for Overleaf.com",
  "version": "0.1.2",
  "content_scripts": [
    {
      "matches": [
        "https://www.overleaf.com/project/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "app.js"
  ],
  "background": {
    "scripts": [
      "backgroundscript.js"
    ],
    "persistent": false
  },
  "commands": {
    "toggle-omnibar": {
      "description": "Toggle the Omnibar",
      "suggested_key": {
        "default": "Ctrl+P"
      }
    }
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
